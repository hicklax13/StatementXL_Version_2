# StatementXL Production Environment Configuration
# Copy to .env and fill in values

# ===================
# Database
# ===================
DATABASE_URL=postgresql://statementxl:your-secure-password@localhost:5432/statementxl

# ===================
# Security
# ===================
# CRITICAL: Generate a secure secret key for production
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Enable HSTS in production
ENABLE_HSTS=true

# ===================
# CORS
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_GLOBAL=1000/hour
RATE_LIMIT_AUTH=10/minute

# ===================
# File Upload
# ===================
MAX_REQUEST_SIZE_MB=50
UPLOAD_DIR=/app/uploads

# ===================
# External APIs (optional)
# ===================
GOOGLE_API_KEY=
OPENAI_API_KEY=

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===================
# Monitoring
# ===================
ENABLE_METRICS=true
BUILD_NUMBER=
GIT_COMMIT=
ENVIRONMENT=production

# ===================
# Email Service
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=StatementXL

# ===================
# Stripe Payments
# ===================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ===================
# Frontend URL
# ===================
FRONTEND_URL=https://app.yourdomain.com
